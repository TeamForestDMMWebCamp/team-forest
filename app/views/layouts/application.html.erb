<!DOCTYPE html>
<html>
  <head>
    <title>TeamForest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
    <body>
      <header class="navbar navbar-inverse">
        <div class="container">
          <nav class='nav navbar-nav navbar-left'>
            <span><%= image_tag "logo.jpg", :size => "400x150"%></span>
          </nav>
            <nav>
              <ul class="nav navbar-nav navbar-right">
                <% if admin_signed_in? %>
                  <li><%= link_to "商品一覧(admin)", admin_products_path %></li>
                  <li><%= link_to "会員一覧", admin_customers_path %></li>
                  <li><%= link_to "注文履歴一覧", admin_orders_path %></li>
                  <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
                <% elsif customer_signed_in? %>
                  <li>
                    <h4 style="color: white;">ようこそ、<%= current_customer.name %>さん！</h4>
                  </li>
                  <li><%= link_to "マイページ(login)", customers_path %></li>
                  <li><%= link_to "商品一覧", products_path %></li>
                  <li><%= link_to "カート", cart_products_path %></li>
                  <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "about(not login)", products_about_path %></li>
                  <li><%= link_to "商品一覧", products_path %></li>
                  <li><%= link_to "新規登録", new_customer_registration_path %></li>
                  <li><%= link_to "ログイン", new_customer_session_path %></li>
                <% end %>
              </ul>
            </nav>
        </div>
  </header>


    <%= yield %>
  </body>
</html>
