<p>ジャンル編集</p>
<%= form_for(@genre, url:admin_genre_path) do |f| %>
<div class="form-group">
      <%= f.label 'ジャンル'%>
      <%= f.text_field :name %>
      <%= f.radio_button :is_active, :Availble %>
      <%= f.label '有効' %>
      <%= f.radio_button :is_active, :Invalid %>
      <%= f.label '無効' %>
      <%= f.submit '変更を保存する', class:"btn btn-info btn-md" %>
    <% end %>
    </div>
