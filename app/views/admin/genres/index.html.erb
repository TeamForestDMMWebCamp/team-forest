  <%= form_for(@genre, url:admin_genres_path) do |f| %>

    <div class="form-group">
      <p>ジャンル一覧・追加</p>

      <%= f.label 'ジャンル'%>
      <%= f.text_field :name %>
      <%= f.radio_button :is_active, :Availble %>
      <%= f.label '有効' %>
      <%= f.radio_button :is_active, :Invalid %>
      <%= f.label '無効' %>
      <%= f.submit '追加', class:"btn btn-info btn-md" %>
    </div>
  <% end %>

<table class=table>
  <thead>
  <tr>
   <th>ジャンル</th>
   <th>状態</th>
   <th></th>
  </tr>
  </thead>

  <tbody>
      <% @genres.each do |genre| %>
  <tr>

     <td>
   <%= genre.name %>
    </td>
    <td>
   <% if genre.is_active == "Availble"  %>
     <%= "有効"%>
     <% else %>
      <%= "無効" %>
     <% end %>
     </td>


    <td>
     <%= link_to "編集する",edit_admin_genre_path(genre.id)%>
    </td>
  </tr>
  <% end %>
  </tbody>
  </table>

