<div class="container">
	<div class="row">
		<h2>商品編集</h2>

<%= form_with model:@product, url: admin_product_path, method: :patch, class: "form-horizontal", local: true do |f| %>

<div class="col-md-3">
	<div class="field">
				<%= attachment_image_tag(@product, :image, fallback: "no_image.jpg", size: "300x300") %>
				<%= f.attachment_field :image, class: "user_image" %>
	</div>
</div>

<div class="col-md-9">
<br>
<br>
		<div class="field form-group">
			<label class="col-md-2 control-label" for="InputEmail">商品名</label>
						<div class="col-md-10">
			<%#= f.label :"商品名" %>
			<%= f.text_area :name, class: "name" %>
			</div>
		</div>

		<div class="field form-group">
			<label class="col-md-2 control-label" for="InputEmail">商品説明</label>
						<div class="col-md-10">
			<%#= f.label :"商品説明" %>
			<%= f.text_area :discription, class: "discription" %>
			</div>
		</div>

		<div class="field form-group">
			<label class="col-md-2 control-label" for="InputEmail">ジャンル</label>
						<div class="col-md-3">
			<%= f.collection_select(:genre_id, Genre.all, :id, :name, {},{class: "col-md-10"}) %>
			</div>
		</div>

		<div class="field form-group">
			<label class="col-md-2 control-label" for="InputEmail">税抜き価格</label>
						<div class="col-md-10">
			<%#= f.label :"税抜き価格" %>
			<%= f.text_area :price_excluding_tax, class: "tax" %>
			</div>
		</div>

		<div class="field form-group">
			<label class="col-md-2 control-label" for="InputEmail">販売ステータス</label>
						<div class="col-md-10">
	  	<%#= f.label '販売ステータス'%>
      <%= f.radio_button :is_active, :Availble %>
      <%= f.label '販売中' %>
      <%= f.radio_button :is_active, :Invalid %>
      <%= f.label '売り切れ' %>
      </div>
		</div>

		<div class="actions form-group" align="right">
<div class="col-md-offset-2 col-md-10">
			<%= f.submit '編集', class:"btn btn-info btn-md" %>
			</div>
		</div>

</div>


<% end %>
	</div>
</div>
