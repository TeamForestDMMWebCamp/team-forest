<!-- ジャンル検索 -->
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-bordered">
        <th class="genre-th">Genre</th>
        <% @genres.each do |f|%>
        <% if f.status == true %>
        <tr class="genre-tr">
          <td class="genre-td">
            <%# ジャンルが無効なら表示しない %>
            <%= link_to f.name, genre_path(f.id) %>
            <% end %></td>
        </tr>
        <% end %>
      </table>
    </div>

  <div class="col-md-10">
    <h3 class="product-index">商品一覧（全<%= @products.count %>件）</h3>
    <div id="product">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <table>
          <tr>
            <td>
              <%= link_to product_path(product) do %>
                <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", size: "200x100" %>
              <% end %><br>
              <%= product.name %><br>
              <%= product.tax_included.to_s(:delimited) %>円
            </td>
          </tr>
        </table>
      </div>
    <% end %>
    </div>
    <!-- １ページに８件表示する -->
    <%= paginate @products %>
    </div>
  </div>
</div>
