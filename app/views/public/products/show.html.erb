<!-- ジャンル検索 -->
<div class="container">
  <div class="row">

    <%= render "genres_list", genres: @genres %>

  <div class="col-md-10">
    <h3 class="product-index">商品詳細（全<%= @products.count %>件）</h3>
    <div id="product">
    <% @products.each do |product| %>ど
      <div class="col-md-3">
        <table>
          <tr>
            <td>
              <%= link_to product_path(product) do %>
                <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", size: "200x100" %>
              <% end %><br>
              <%= product.name %><br>
              <%= product.including_tax.to_s(:delimited) %>円
            </td>
          </tr>
        </table>
      </div>
    <% end %>
    </div>
    <!-- １ページに８件表示する -->
    <%= paginate @products %>
    </div>
  </div>
</div>
