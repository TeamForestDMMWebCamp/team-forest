<% provide(:title, "ホーム") %>
<div class="container">
	<div class="row">
		<div class="main-visual">
			<div class="main-visual-content">
				<p class="main-visual-text">
					Welcome NaganoCake<br>
					このサイトは、ケーキ販売のECサイトになります。<br>
					会員でない方も商品の閲覧はできますが、<br>
					購入には会員登録が必要になります。<br>
				</p>
			</div>
		</div>
  </div>

	<h2 class="toppage-head">オススメ商品</h2>
	<div class="row">
			<!-- ランダムに4つ表示されるようになっています -->
		<% @products.each do |product| %>
			<%#= render "product_each", product: product %>
			<%# if (product.genre.is_active == "Availble") && (product.is_active == "Availble") %>
				<div class="col-xs-3">
					<%= link_to product_path(product.id), class: "btn-link", :style=>"color:0099FF;" do %>
						<span id="img_field" class="product">
							<%= attachment_image_tag(product, :image, size: "180x130", fallback: "no_image.jpg") %>
						</span>
						<p>
							<%= product.name %>
						</p>
						<% if product.is_active == "Availble" %>
							<p>
								¥<%= product.including_tax.to_s(:delimited) %>
							</p>
						<% elsif product.is_active == "Invalid" %>
            	<p class="soldout">売り切れ中</p>
            <% end %>
					<% end %>
				</div>
　　　<%# end %>
		<% end %>
		<div class="col-xs-12">
			<%= link_to "もっと見る", products_path, class: "btn-link  pull-right" %>
		</div>
	</div>
</div>