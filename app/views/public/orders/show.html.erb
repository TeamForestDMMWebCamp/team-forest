<div class="container">
	<div class="row">
		<div class="col-md-3 col-md-offset-1", style="background-color: #EEEEEE;">
			<h3>注文履歴詳細</h3>
		</div>
		</br>
	</div>

	<div class="row">
		<p class="font-weigt-bold">注文情報</p>
		<div class="col-md-4">
			<table class="table table-hover table-bordered">
				<tr class="">
					<th class="info">注文日</th>
					<td>
						<%= @order.created_at.strftime('%Y/%m/%d') %>
					</td>
				</tr>

				<tr class="">
					<th class="info">配送先</th>
					<td>
						<%= @order.shipping_postal_code %></br>
						<%= @order.shipping_address %></br>
						<%= @order.shipping_name %>
					</td>
				</tr>

				<tr class="">
					<th class="info">支払方法</th>
					<td>
						<%= @order.payment_method %>
					</td>
				</tr>

				<tr class="">
					<th class="info">ステータス</th>
					<td>
						<%= @order.order_received_status %>
					</td>
				</tr>
			</table>
		</div>

		<div class="col-md-4">
			<p class="font-weigt-bold">請求情報</p>
			<table class="table table-hover table-bordered">
				<tr class="">
					<th class="info">商品合計</th>
					<td class="text-right">
							¥<%= (@order.total_payment - @order.shipping_fee).to_s(:delimited) %>
					</td>
				</tr>

				<tr class="">
					<th class="info">配送料</th>
					<td class="text-right">
							¥<%= @order.shipping_fee.to_s(:delimited) %>
					</td>
				</tr>

				<tr class="">
					<th class="info font-weigt-bold">ご請求額</th>
					<td class="text-right" %>
							¥<%= @order.total_payment.to_s(:delimited) %>
					</td>
				</tr>
			</table>
		</div>
	</div>

	<div class="row">
		<p class="font-weigt-bold">注文内容</p>
		<table class="table table-hover table-bordered">
			<thead>
				<tr class="info">
					<th>商品</th>
					<th>単価(税込)</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
			</thead>

			<tbody>
				<% @ordered_products.each do |ordered_product| %>
					<tr>
						<td class="text-left">
							<%= ordered_product.name %>
						</td>
						<!--単価税込-->
						<td class="text-right">
							¥<%= ordered_product.including_tax.to_s(:delimited) %>
						</td>
						<!--数量-->
						<td class="text-left">
							<%= ordered_product.quantity %>
						</td>
						<!--小計-->
						<td class="text-right">
							¥<%= (ordered_product.including_tax * ordered_product.quantity).to_s(:delimited) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

</div>
