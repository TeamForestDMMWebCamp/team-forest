<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-1", style="background-color: #EEEEEE;">
      <h3>注文情報入力</h3>
    </div>
  </div>

  <%= form_with url: "/orders/confirm", method: :post, class: "form-horizontal", local: true do |f| %>

    <div class="row field">
      <h4>
        <%= f.label :"支払方法", class: "font-weight-bold" %>
      </h4>

      <div class="col-md-6">
        <%= f.radio_button :payment_method, :credit, checked: true %>
        <%= f.label :"クレジットカード" %></br>

        <%= f.radio_button :payment_method, :bank %>
        <%= f.label :"銀行振り込み" %>
      </div>
    </div>

    <div class="row field">
      <h4>
        <%= f.label :"お届け先",class: "font-weight-bold" %>
      </h4>
<!--(:shipping_name, :shipping_postal_code, :shipping_address)-->
      <div class="col-md-9">
        <%= radio_button_tag("shipping", "1", checked: true) %>
        <%= f.label :"ご自身の住所" %></br>
        <%= current_customer.zip_code %>
        <%= current_customer.address %></br>
        <%= current_customer.name %></br>

        <%= radio_button_tag("shipping", "2") %>
        <%= f.label :"登録済住所から選択" %></br>

        <%= radio_button_tag("shipping", "3") %>
        <%= f.label :"新しいお届け先" %>
      </div>
    </div>

    <div class="row field text-center">
      <%= f.submit "確認画面へ進む", class:"btn btn-info btn-md " %>
    </div>

  <% end %>

</div>
