<div class="container">
	<div class="row">
		<div class="col-md-3 col-md-offset-1", style="background-color: #EEEEEE;">
			<h3>注文情報入力</h3>
		</div>
	</div>

	<div class="row">
		</br>
		<div class="col-md-8">
			<!--↓カート内の商品確認-->
			<table class="table table-hover table-bordered">
				<thead>
					<tr class="info">
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>

				<tbody>
					<% @sum = 0 %>
					<% @cart_products.each do |cart| %>
						<tr id="cart-<%= cart.id %>">
							<td class="text-left">
								<%= attachment_image_tag( cart.product, :image, size: "55x43", fallback: "no_image.jpg") %>
								<%= cart.product.name %>
							</td>
							<!--単価税込-->
							<td class="text-right">
								¥<%= cart.product.including_tax.to_s(:delimited) %>
							</td>
							<td>
								<!--数量-->
								<%= cart.quantity %>
							</td>
							<!--小計-->
							<td class="text-right" id='price_including_tax-<%= cart.id %>'>
									¥<%= cart.product.including_tax * cart.quantity %>
							</td>
						</tr>
						<!--合計金額-->
						<% @sum += cart.product.including_tax * cart.quantity  %>

					<% end %>
				</tbody>
			</table>
		</div>

		<div class="col-md-4">
			<table class="table table-hover table-bordered">
				<tr class="">
					<th class="info">送料</th>
					<td class="text-right">
							¥<%= @shipping_fee %>
					</td>
				</tr>

				<tr class="">
					<th class="info">商品合計</th>
					<td class="text-right">
							¥<%= @sum %>
					</td>
				</tr>

				<tr class="">
					<th class="info">請求金額</th>
					<td class="text-right" %>
							¥<%= @sum + @shipping_fee %>
					</td>
				</tr>
			</table>
		</div>
	</div>

<!--↓支払方法の確認-->
	<div class="row">
		<table class="table">
			<tr>
				<th class="table-noborder font-weight-bold">
					支払方法
				</th>
				<td class="table-noborder">
					<% if @order.payment_method == "credit" %>
						クレジットカード
					<% elsif @order.payment_method == "bank" %>
						銀行振り込み
					<% else %>
						入力されていません
					<% end %>
				</td>
			</tr>
<!--↓お届け先の確認-->
			<tr>
				<th class="table-noborder font-weight-bold">
					お届け先
				</th>
				<td class="table-noborder">
					<% if params["radio"] == "r1" %>
						<%= current_customer.zip_code %>
						<%= current_customer.address %>
						<%= current_customer.name %>
					<% elsif params["radio"] == "r2" %>
						<%= @shipping_address.postal_code %>
						<%= @shipping_address.address %>
						<%= @shipping_address.name %>
					<% elsif params["radio"] == "r3" %>
						<%= @order.order_shippings %>
					<% else %>
						入力されていません
					<% end %>
				</td>
			</tr>
		</table>

</div>
