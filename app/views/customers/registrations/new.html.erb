<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-1", style="background-color: #EEEEEE;">
      <h3>新規会員登録</h3>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="col-md-2">
        <%= f.label :first_name, "名前" %></br>
        <%= f.label :last_name, "フリガナ" %></br>
        <%= f.label :email, "メールアドレス" %></br>
        <%= f.label :zip_code, "郵便番号(ハイフンなし)" %></br>
        <%= f.label :address, "住所" %></br>
        <%= f.label :phone_number, "電話番号(ハイフンなし)" %></br>
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></br>
        <%= f.label :password_confirmation, "パスワード(確認用)" %></br>
      </div>

      <div class="col-md-1">
        <%= f.label :last_name, "(姓)" %></br>
        <%= f.label :kana_last_name, "(セイ)" %></br>
      </div>

      <div class="col-md-3">
        <div class="field">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>

        <div class="field">
          <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code" %>
        </div>

        <div class="field">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="col-md-1">
        <%= f.label :first_name, "(名)" %></br>
        <%= f.label :kana_first_name, "(メイ)" %></br>
      </div>

      <div class="col-md-1">
        <div class="field">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="field">
          <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3 col-md-offset-1", style="background-color: #EEEEEE;">
      <h3>既に登録済みの方</h3>
    </div>
  </div>

    <%= render "customers/shared/links" %>からログインしてください
</div>
