<% provide(:title, "ログイン") %>
<div class="container">
  <div class="row">
    <div class="col-md-7 col-md-offset-2", style="background-color: #EEEEEE;">
      <h4 class="">会員の方はこちらからログイン</h4>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-md-12 col-md-offset-1">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "layouts/error_messages", resource: resource %>
      
        <div class="form-group col-xs-12">
            <%= f.label :"メールアドレス" ,class: "col-xs-3 control-label" %>
            <%= f.email_field :email, autofocus: true, class: "col-xs-7 form-control-static email" %>
        </div>
        <div class="form-group col-xs-12">
            <%= f.label :"パスワード" ,class: "col-xs-3 control-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-7 form-control-static encrypted_password" %>
        </div>
  
  
        <div class="col-xs-6 pull-right">
          <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name), class: "btn-link" %>
        </div>
        <div class="actions col-xs-7">
          <%= f.submit "ログイン", class: "btn btn-primary col-xs-3 col-xs-offset-5" %>
        </div>
      <% end %>
      
      <div class="col-xs-9">
      <h4 class="head-line text-left">登録がお済みではない方</h4>
      <p class="new-link">
        <%= link_to "こちら", new_registration_path(resource_name), data: {"turbolinks" => false}, class: "btn-link" %>から新規登録を行ってください。
      </p>
      </div>
 
    </div>
  </div>
</div>